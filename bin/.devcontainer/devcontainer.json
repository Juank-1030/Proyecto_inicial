{
  "name": "SilkRoad Proyecto Ciclo 3",
  "image": "mcr.microsoft.com/devcontainers/java:21-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/maven:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "AppMapIO.appmap",
        "redhat.java",
        "vscjava.vscode-maven",
        "vscjava.vscode-java-test",
        "SonarSource.sonarlint-vscode"
      ],
      "settings": {
        "java.server.launchMode": "Standard",
        "redhat.telemetry.enabled": false
      }
    }
  },
  "forwardPorts": [3000],
  "postCreateCommand": "npm install -g @appmap/cli && mvn clean compile",
  "remoteUser": "vscode"
}
